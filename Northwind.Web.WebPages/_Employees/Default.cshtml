@{  
    Page.Title = "Northwind: Employees";
    Page.ApiController = "Employees";
}

<div class="row">
    <form class="form-search pull-right">
        <input type="text" class="input-medium search-query" placeholder="Filter" />
        <button class="btn">Go</button>
    </form>
    <h1>Employees</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Title</th>
                <th>Hire Date</th>
                <th>Orders</th>
                <th></th>
            </tr>
        </thead>
        <tbody data-bind="foreach: @Page.ApiController">
            <tr>
                <td data-bind="text: FirstName"></td>
                <td data-bind="text: LastName"></td>
                <td data-bind="text: Title"></td>
                <td data-bind="text: HireDate"></td>
                <td data-bind="text: Orders"></td>
                <td>
                    <a class="btn" 
                        data-template="ViewEmployee" 
                        data-bind="attr: { 'data-id': Id(), href: '#!/' + Id() }"
                        data-toggle="modal"
                        data-target="#modal"><i class="icon-eye-open"></i> View</a>
                    <a class="btn btn-primary" 
                        data-template="EditEmployee" 
                        data-bind="attr: { 'data-id': Id(), href: '#!/Edit/' + Id() }"
                        data-toggle="modal"
                        data-target="#modal"><i class="icon-edit icon-white"></i> Edit</a>
                    <a class="btn btn-danger" 
                        data-template="DeleteEmployee" 
                        data-bind="attr: { 'data-id': Id(), href: '#!/Edit/' + Id() }"
                        data-toggle="modal"
                        data-target="#modal"><i class="icon-trash icon-white"></i> Delete</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@section scripts {
<script id="ViewEmployee" type="text/html">
    @RenderPage("_View.cshtml")
</script>
<script id="EditEmployee" type="text/html">
    @RenderPage("_Edit.cshtml")
</script>
<script id="DeleteEmployee" type="text/html">
<div class="alert  alert-block alert-danger">
  <strong>Warning!</strong> You are about to delete <strong data-bind="text: FirstName"></strong> <strong data-bind="text: LastName"></strong>. Are you sure?
</div>    
</script>
}