<div id="modal" class="modal hide fade">
    <div class="modal-header">
        <button class="close" data-dismiss="modal">&times;</button>
        <h3 data-bind="text: Selected.Template().replace(/([A-Z])/g, ' $1')"></h3>
    </div>
    <div class="modal-body" data-bind="template: { name: Selected.Template(), data: Selected.Item() }">
    </div>
    <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            <a href="#" class="btn btn-primary" data-bind="visible: Selected.Template().indexOf('View') !== 0">Submit</a>
    </div>
</div>